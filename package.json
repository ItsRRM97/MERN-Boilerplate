{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "My boilerplate for MERN Projects",
  "main": "index.js",
  "dependencies": {
    "interactjs": "^1.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "html-webpack-plugin": "^3.2.0",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "build": "webpack",
    "clean": "rimraf dist node_modules",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsRRM97/MERN-Boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Roshan Raj Mishra",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ItsRRM97/MERN-Boilerplate/issues"
  },
  "homepage": "https://github.com/ItsRRM97/MERN-Boilerplate#readme"
}
